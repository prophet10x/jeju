{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "tsconfig.json",
        "tsconfig.*.json",
        "package.json",
        "!**/*.test.ts",
        "!**/*.test.tsx"
      ],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**", "lib/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["src/**", "tsconfig.json", "tsconfig.*.json"],
      "outputs": []
    },
    "lint": {
      "inputs": [
        "src/**",
        "app/**",
        "components/**",
        "lib/**",
        "hooks/**",
        "config/**",
        "types/**",
        "eslint.config.js",
        ".eslintrc*",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**", "test/**", "**/*.test.ts", "**/*.test.tsx"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:unit": {
      "dependsOn": [],
      "inputs": ["src/**", "**/*.test.ts"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**"],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "tsconfig.base.json",
    "eslint.config.js",
    "packages/contracts/deployments/testnet.json",
    "packages/contracts/deployments/mainnet.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV"
  ]
}
