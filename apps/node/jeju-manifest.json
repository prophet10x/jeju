{
  "name": "node",
  "displayName": "Network Node",
  "description": "Run infrastructure and earn rewards",
  "enabled": true,
  "autoStart": false,
  "ports": {
    "main": 1420
  },
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "test": "bun run test:unit"
  },
  "env": {
    "JEJU_RPC_URL": "http://127.0.0.1:8545",
    "CHAIN_ID": "1337"
  },
  "requirements": {
    "contracts": true
  },
  "testing": {
    "unit": {
      "command": "bun test src/",
      "timeout": 60000
    },
    "e2e": {
      "command": "bunx playwright test tests/e2e",
      "timeout": 300000,
      "requiresChain": true
    }
  }
}

