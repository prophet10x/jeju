{
  "name": "squid",
  "version": "1.0.0",
  "description": "Comprehensive blockchain indexer for Jeju",
  "scripts": {
    "postinstall": "node patches/apollo-fix.js 2>/dev/null || true",
    "build": "rm -rf lib && tsc",
    "predev": "bun run db:cleanup && bun run db:up && bun run db:wait && bun run db:create && bun run db:migrate",
    "dev": "concurrently --kill-others \"sqd process:dev\" \"GQL_PORT=4350 sqd serve\" \"bun run api:all\"",
    "dev:skip-setup": "concurrently --kill-others \"sqd process:dev\" \"GQL_PORT=4350 sqd serve\" \"bun run api:all\"",
    "dev:indexer": "concurrently --kill-others \"sqd process:dev\" \"GQL_PORT=4350 sqd serve\"",
    "start": "npm run process",
    "start:script": "chmod +x scripts/start.sh && ./scripts/start.sh",
    "api:all": "node lib/api-server.js",
    "api:rest": "node lib/rest-server.js",
    "api:a2a": "node lib/a2a-server.js",
    "api:mcp": "node lib/mcp-server.js",
    "db:cleanup": "docker rm -f squid-db-1 2>/dev/null || true",
    "db:up": "sqd up",
    "db:down": "sqd down",
    "db:wait": "until docker exec squid-db-1 pg_isready -U postgres 2>/dev/null; do echo 'Waiting for database...'; sleep 1; done",
    "db:create": "docker exec squid-db-1 psql -U postgres -c 'CREATE DATABASE indexer;' || docker exec squid-db-1 psql -U postgres -c 'SELECT 1' > /dev/null",
    "db:migrate": "sqd migration:apply",
    "db:reset": "bun run db:down && bun run db:up && bun run db:wait && bun run db:create && bun run db:migrate",
    "process": "sqd process",
    "api": "sqd serve",
    "codegen": "sqd codegen",
    "migrate:generate": "sqd migration:generate",
    "migrate:apply": "sqd migration:apply",
    "migrate:clean": "sqd migration:clean",
    "test": "bun test test/",
    "test:unit": "bun test test/*.test.ts",
    "test:integration": "bun test test/integration/",
    "test:load": "bun test/load/run.ts",
    "test:basic": "chmod +x test/basic.sh && ./test/basic.sh",
    "test:localnet": "chmod +x test/localnet.sh && ./test/localnet.sh",
    "test:data": "chmod +x test/real-data.sh && ./test/real-data.sh",
    "test:contracts": "chmod +x test/contract-interaction.sh && ./test/contract-interaction.sh",
    "test:e2e": "chmod +x test/e2e.test.sh && ./test/e2e.test.sh",
    "test:all": "bun run test && bun run test:data && bun run test:e2e",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playground": "playwright test tests/e2e/playground.spec.ts",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "verify": "bun run test:data"
  },
  "dependencies": {
    "@jeju/db": "workspace:*",
    "@subsquid/evm-abi": "0.3.0",
    "@subsquid/evm-codec": "0.3.0",
    "@subsquid/evm-processor": "1.19.1",
    "@subsquid/graphql-server": "4.11.0",
    "@subsquid/typeorm-migration": "1.3.0",
    "@subsquid/typeorm-store": "1.5.1",
    "@subsquid/util-internal": "3.2.0",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.21",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "ethers": "6.13.0",
    "express": "4.21.2",
    "hono": "^4.6.10",
    "pg": "8.12.0",
    "typeorm": "0.3.26",
    "viem": "2.21.0"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@subsquid/typeorm-codegen": "2.0.2",
    "@types/node": "20.16.5",
    "autocannon": "8.0.0",
    "concurrently": "8.2.2",
    "typescript": "5.6.2"
  }
}
