{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "indexer",
  "displayName": "Subsquid Indexer",
  "version": "1.0.0",
  "type": "core",
  "description": "Blockchain indexer with GraphQL API - indexes all on-chain events for apps",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run start",
    "test": "bun run test"
  },
  "ports": {
    "main": 4350,
    "api": 4350,
    "database": 5432
  },
  "dependencies": ["contracts"],
  "optional": false,
  "enabled": true,
  "autoStart": false,
  "tags": ["indexer", "graphql", "data", "jns", "infrastructure"],
  "jns": {
    "name": "indexer.jeju",
    "description": "Blockchain Indexer with GraphQL API",
    "url": "https://indexer.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:4350/graphql",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": ["jeju-app", "indexer", "graphql", "data"],
    "metadata": {
      "category": "data",
      "provider": "jeju-network",
      "features": ["graphql", "subscriptions", "historical-data"]
    },
    "trustModels": ["open"],
    "x402Support": false,
    "jnsName": "indexer.jeju"
  },
  "decentralization": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "cacheRules": [
        { "pattern": "/assets/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/graphql", "ttl": 0 }
      ],
      "apiCaching": {
        "enabled": true,
        "defaultTtl": 5,
        "varyHeaders": ["x-jeju-address"]
      },
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "indexer.jeju",
      "buildDir": "public",
      "spa": false,
      "fallbackOrigins": ["https://indexer.jejunetwork.org"]
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun test",
      "timeout": 120000
    },
    "integration": {
      "command": "bun test --grep integration",
      "timeout": 180000,
      "requiresChain": true,
      "requiresServices": true
    },
    "e2e": {
      "command": "bunx playwright test",
      "timeout": 300000,
      "requiresChain": true
    },
    "services": ["postgres", "chain"]
  }
}
