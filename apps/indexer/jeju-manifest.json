{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "indexer",
  "displayName": "Subsquid Indexer",
  "version": "1.0.0",
  "type": "core",
  "description": "Blockchain indexer with GraphQL API",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run start",
    "test": "bun run test"
  },
  "ports": {
    "main": 4350,
    "api": 4350,
    "database": 5432
  },
  "dependencies": ["contracts"],
  "optional": false,
  "enabled": true,
  "autoStart": false,
  "tags": ["indexer", "graphql", "data", "jns"],
  "jns": {
    "name": "indexer.jeju",
    "description": "Blockchain Indexer with GraphQL API",
    "url": "https://indexer.jeju.network"
  },
  "agent": {
    "enabled": true,
    "tags": ["jeju-app", "indexer", "graphql", "data"],
    "metadata": {
      "category": "data",
      "provider": "jeju-network"
    },
    "trustModels": ["open"],
    "jnsName": "indexer.jeju"
  },
  "healthCheck": {
    "url": "http://localhost:4350/graphql",
    "interval": 30000
  },
  "testing": {
    "unit": {
      "command": "bun test",
      "timeout": 120000
    },
    "integration": {
      "command": "bun test --grep integration",
      "timeout": 180000,
      "requiresChain": true,
      "requiresServices": true
    },
    "e2e": {
      "command": "bunx playwright test",
      "timeout": 300000,
      "requiresChain": true
    },
    "services": ["postgres", "chain"],
    "dependencies": []
  }
}

