{
  "name": "bazaar",
  "version": "1.0.0",
  "description": "Unified DeFi + NFT Marketplace for Jeju - Uniswap V4 Swaps, Liquidity, and NFT Trading",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4006",
    "dev:jeju": "cd ../.. && bun run jeju:dev --only=bazaar",
    "build": "next build",
    "start": "next start -p 4006",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "SKIP_INDEXER_TESTS=true bun run test:unit",
    "test:full": "SKIP_INDEXER_TESTS=true bun run test:unit && bun run test:e2e",
    "test:unit": "SKIP_INDEXER_TESTS=true bun test lib/__tests__/banCheck.test.ts lib/__tests__/indexer-client.test.ts lib/__tests__/x402.test.ts lib/__tests__/paymaster-integration.test.ts config/__tests__/*.test.ts",
    "test:e2e": "playwright test tests/e2e --reporter=dot",
    "test:e2e:headed": "playwright test tests/e2e --headed --reporter=dot",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:wallet": "playwright test tests/wallet --config=synpress.config.ts --reporter=list",
    "test:wallet:build-cache": "npx synpress --force",
    "test:wallet:run": "playwright test tests/wallet --config=synpress.config.ts --reporter=list",
    "test:coverage": "bun test --coverage lib/__tests__/*.test.ts config/__tests__/*.test.ts",
    "test:all": "bun run test:unit && bun run test:e2e",
    "test:jeju": "cd ../.. && bun run jeju:test --app=bazaar",
    "test:localnet": "bun test tests/integration/",
    "test:localnet:full": "bun run scripts/run-localnet-simulations.ts"
  },
  "dependencies": {
    "@babylon/shared": "workspace:vendor/babylon/packages/shared",
    "@jejunetwork/config": "workspace:*",
    "@jejunetwork/contracts": "workspace:*",
    "@jejunetwork/oauth3": "workspace:*",
    "@jejunetwork/sdk": "workspace:*",
    "@jejunetwork/shared": "workspace:*",
    "@jejunetwork/ui": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@rainbow-me/rainbowkit": "2.2.9",
    "@solana/wallet-adapter-base": "^0.9.26",
    "@solana/wallet-adapter-react": "^0.15.38",
    "@solana/wallet-adapter-react-ui": "^0.9.38",
    "@solana/web3.js": "1.98.4",
    "@tanstack/react-query": "5.90.12",
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/v4-sdk": "^1.21.2",
    "bs58": "^6.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "lucide-react": "0.546.0",
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "7.56.4",
    "recharts": "3.6.0",
    "sonner": "1.7.2",
    "tailwind-merge": "2.6.0",
    "viem": "2.43.2",
    "wagmi": "2.18.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@jejunetwork/tests": "workspace:*",
    "@playwright/test": "1.57.0",
    "@synthetixio/synpress": "4.1.1",
    "@types/node": "22.15.30",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "10.4.21",
    "eslint": "8.57.1",
    "eslint-config-next": "16.1.0",
    "playwright-core": "1.57.0",
    "postcss": "8.5.3",
    "tailwindcss": "3.4.17",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  }
}
