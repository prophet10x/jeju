{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "declaration": false,
    "declarationMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "api/**/*.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "config/**/*.ts",
    "hooks/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.ts",
    "schemas/**/*.ts"
  ],
  "exclude": ["node_modules", "tests/**/*", "test/**/*", "dist"]
}
