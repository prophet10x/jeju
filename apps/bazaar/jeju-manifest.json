{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "bazaar",
  "displayName": "Bazaar",
  "version": "1.0.0",
  "type": "core",
  "description": "Unified DeFi + NFT + Token Launchpad - Uniswap V4 swaps, liquidity pools, NFT trading, JNS name marketplace, and multi-chain token creation",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run start",
    "test": "bun run test"
  },
  "ports": {
    "main": 4006
  },
  "dependencies": ["contracts", "config"],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": ["defi", "nft", "marketplace", "uniswap-v4", "launchpad", "multi-chain", "jns", "names", "core"],
  "healthCheck": {
    "url": "http://localhost:4006",
    "interval": 30000
  },
  "jns": {
    "name": "bazaar.jeju",
    "description": "DeFi + NFT + Names Marketplace on Jeju",
    "url": "https://bazaar.jeju.network"
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/api/a2a",
    "mcpEndpoint": "/api/mcp",
    "tags": ["jeju-app", "defi", "nft", "marketplace", "launchpad", "jns"],
    "metadata": {
      "category": "defi",
      "provider": "jeju-network"
    },
    "trustModels": ["open"],
    "x402Support": true,
    "jnsName": "bazaar.jeju"
  },
  "testing": {
    "unit": {
      "command": "bun run test:unit",
      "timeout": 120000
    },
    "e2e": {
      "command": "bunx playwright test tests/e2e",
      "timeout": 300000,
      "requiresChain": true
    },
    "wallet": {
      "command": "bunx playwright test tests/wallet --config=synpress.config.ts",
      "timeout": 600000,
      "requiresChain": true,
      "requiresWallet": true
    },
    "services": ["contracts", "indexer"]
  }
}
