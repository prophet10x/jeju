{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "crucible",
  "displayName": "Crucible",
  "version": "1.0.0",
  "type": "core",
  "description": "Decentralized agent orchestration platform for autonomous AI agents",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run start",
    "test": "bun run test"
  },
  "ports": {
    "api": 4020,
    "executor": 4021
  },
  "dependencies": ["contracts", "config", "dws"],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": ["agents", "orchestration", "ai", "automation", "triggers", "rooms"],
  "jns": {
    "name": "crucible.jeju",
    "description": "Agent Orchestration Platform",
    "url": "https://crucible.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:4020/health",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": ["jeju-app", "agents", "orchestration", "automation"],
    "metadata": {
      "category": "infrastructure",
      "provider": "jeju-network",
      "features": ["agent-rooms", "triggers", "vault", "identity"]
    },
    "trustModels": ["open", "staked"],
    "x402Support": true,
    "jnsName": "crucible.jeju"
  },
  "decentralization": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "cacheRules": [
        { "pattern": "/static/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/api/**", "ttl": 0 },
        { "pattern": "/**/*.html", "ttl": 60, "staleWhileRevalidate": 3600 }
      ],
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "crucible.jeju",
      "buildDir": "dist",
      "spa": true,
      "fallbackOrigins": ["https://crucible.jejunetwork.org"]
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun run test",
      "timeout": 120000
    },
    "integration": {
      "command": "bun test src/tests/integration.test.ts",
      "timeout": 300000,
      "requiresServices": true
    },
    "e2e": {
      "command": "bunx playwright test tests/synpress",
      "timeout": 300000,
      "requiresChain": true
    }
  }
}
