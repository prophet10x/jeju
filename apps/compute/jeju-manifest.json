{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "compute",
  "displayName": "Network Compute Marketplace",
  "version": "1.0.0",
  "type": "core",
  "description": "Decentralized compute marketplace with SSH/Docker rentals (vast.ai-style), ERC-8004 integration. Run compute nodes, rent GPU resources, stake as providers. Includes Akash Network integration for external compute.",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run node",
    "gateway": "bun run gateway",
    "bridge": "bun run bridge",
    "test": "bun run test"
  },
  "ports": {
    "main": 4007,
    "nodeApi": 4008,
    "gateway": 4009,
    "bridge": 4010,
    "sshProxy": 2222
  },
  "dependencies": ["contracts", "config"],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": ["compute", "ai", "inference", "staking", "erc-8004", "marketplace", "tee", "gpu", "akash"],
  "jns": {
    "name": "compute.jeju",
    "description": "Decentralized Compute Marketplace",
    "url": "https://compute.jeju.network"
  },
  "healthCheck": {
    "url": "http://localhost:4007/health",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": ["jeju-app", "compute", "ai", "inference", "marketplace"],
    "metadata": {
      "category": "compute",
      "provider": "jeju-network"
    },
    "trustModels": ["open", "staked"],
    "x402Support": true,
    "jnsName": "compute.jeju"
  },
  "services": {
    "bridge": {
      "description": "External compute bridge (Akash integration)",
      "command": "bun run bridge",
      "port": 4010,
      "healthCheck": "/health",
      "env": {
        "ENABLE_AKASH": "true",
        "AKASH_NETWORK": "testnet"
      }
    }
  },
  "testing": {
    "unit": {
      "command": "bun test src/tests/ && bun test src/compute/tests/",
      "timeout": 120000
    },
    "bridge": {
      "command": "bun test src/providers/tests/",
      "timeout": 60000
    },
    "e2e": {
      "command": "bunx playwright test tests/synpress",
      "timeout": 300000,
      "requiresChain": true
    }
  }
}

