{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["bun"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "contracts",
    "src/bridge/solana-adapter.ts",
    "src/bridge/warp-route-deployer.ts",
    "src/solana",
    "src/deployer/liquidity-deployer.ts",
    "src/tests",
    "src/config/bbln-deployment.ts"
  ]
}
