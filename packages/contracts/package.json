{
  "name": "@jejunetwork/contracts",
  "version": "0.2.0",
  "description": "Jeju Network smart contract ABIs, types, and deployment addresses. Includes game contracts (Gold, Items, GameIntegration) for Hyperscape and forkable games.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./abis": {
      "import": "./dist/abis/index.js",
      "types": "./dist/abis/index.d.ts"
    },
    "./abis/*": "./abis/*.json",
    "./deployments": {
      "import": "./dist/deployments.js",
      "types": "./dist/deployments.d.ts"
    },
    "./deployments/*": "./deployments/*.json"
  },
  "files": [
    "dist",
    "abis",
    "deployments"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "node ../../node_modules/typescript/bin/tsc",
    "build:contracts": "forge build",
    "build:abis": "forge build && bun run scripts/export-abis.ts",
    "test": "forge test",
    "test:registry": "forge test --match-contract '.*Registry.*'",
    "test:oif": "forge test --match-path 'test/OIF*.sol'",
    "slither": "slither . --config-file slither.config.json",
    "slither:report": "slither . --config-file slither.config.json --json slither-report.json",
    "clean": "rm -rf dist out cache",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/jeju.git",
    "directory": "packages/contracts"
  },
  "keywords": [
    "jeju",
    "ethereum",
    "smart-contracts",
    "abi",
    "solidity",
    "erc-8004",
    "oif",
    "intents",
    "games",
    "nft",
    "erc-1155",
    "hyperscape"
  ],
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "viem": ">=2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
