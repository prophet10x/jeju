{
  "name": "@jejunetwork/messaging",
  "version": "0.1.0",
  "description": "Unified messaging protocol for Jeju Network - public (Farcaster) and private (XMTP) messaging",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./farcaster": {
      "types": "./dist/farcaster/index.d.ts",
      "import": "./dist/farcaster/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js"
    }
  },
  "files": ["dist", "src"],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@jejunetwork/db": "workspace:*",
    "@jejunetwork/kms": "workspace:*",
    "@jejunetwork/shared": "workspace:*",
    "@jejunetwork/types": "workspace:*",
    "@noble/ciphers": "^1.2.1",
    "@noble/curves": "^1.8.1",
    "@noble/hashes": "^1.7.1",
    "elysia": "^1.4.19",
    "viem": "2.43.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "viem": ">=2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/jeju.git",
    "directory": "packages/messaging"
  },
  "publishConfig": {
    "access": "public"
  }
}
