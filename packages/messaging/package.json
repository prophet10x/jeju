{
  "name": "@jeju/messaging",
  "version": "0.1.0",
  "description": "Decentralized private messaging protocol for Jeju L2",
  "license": "MIT",
  "type": "module",
  "main": "dist/sdk/index.js",
  "types": "dist/sdk/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js"
    },
    "./node": {
      "node": {
        "types": "./dist/node/index.d.ts",
        "import": "./dist/node/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:e2e": "bun test src/tests/e2e.test.ts",
    "node": "bun run src/node/index.ts",
    "demo": "bun run src/demo/run-demo.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/jeju.git",
    "directory": "packages/messaging"
  },
  "keywords": [
    "jeju",
    "messaging",
    "encrypted",
    "decentralized",
    "privacy"
  ],
  "dependencies": {
    "@noble/curves": "^1.8.1",
    "@noble/ciphers": "^1.2.1",
    "@noble/hashes": "^1.7.1",
    "hono": "^4.4.0",
    "viem": "^2.21.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ws": "^8.5.12",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

