{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["*.ts", "*.json"],
  "exclude": ["node_modules", "dist"]
}

