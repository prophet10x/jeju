{
  "name": "@jejunetwork/db",
  "version": "0.1.0",
  "description": "Database Integration for Jeju Network - Powered by CovenantSQL",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js",
      "require": "./dist/adapters/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "server": "bun run src/server.ts",
    "server:dev": "CQL_DEBUG=true bun run src/server.ts",
    "mock-cql": "bun run src/mock-cql-server.ts",
    "test": "bun test",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/jeju.git",
    "directory": "packages/db"
  },
  "keywords": [
    "jeju",
    "covenantsql",
    "database",
    "decentralized",
    "sql",
    "db"
  ],
  "dependencies": {
    "@jejunetwork/config": "workspace:*",
    "hono": "4.11.1",
    "viem": "2.43.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.30.0",
    "typeorm": ">=0.3.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": { "optional": true },
    "typeorm": { "optional": true }
  },
  "publishConfig": {
    "access": "public"
  }
}
