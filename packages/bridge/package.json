{
  "name": "@jejunetwork/zksolbridge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Production-grade Solanaâ†”EVM bridge with ZK Light Client verification - trustless, no intermediaries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:contracts": "forge build --root contracts",
    "build:circuits": "cd circuits && cargo build --release",
    "build:programs": "cd programs && anchor build",
    "build:geyser": "cd geyser/consensus-plugin && cargo build --release",
    "build:all": "bun run build && bun run build:contracts",
    "test": "bun test tests/",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "test:contracts": "forge test --root contracts -vvv",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "benchmark": "bun run tests/benchmarks/benchmark-suite.ts",
    "security": "bun run tests/security/security-suite.ts",
    "gas": "bun run tests/gas/gas-analysis.ts",
    "validate": "bun run test:unit && bun run benchmark && bun run security && bun run gas",
    "local:start": "bun run src/local-dev/start-local-env.ts",
    "local:stop": "bun run src/local-dev/stop-local-env.ts",
    "local:reset": "bun run src/local-dev/reset-local-env.ts",
    "orchestrator": "bun run scripts/orchestrator.ts",
    "orchestrator:local": "bun run scripts/orchestrator.ts --mode local",
    "orchestrator:testnet": "bun run scripts/orchestrator.ts --mode testnet",
    "orchestrator:mainnet": "bun run scripts/orchestrator.ts --mode mainnet",
    "relayer": "bun run src/relayer/service.ts",
    "prover": "bun run prover/services/prover.ts",
    "beacon-watcher": "bun run geyser/ethereum-watcher/src/watcher.ts",
    "deploy:local": "jeju deploy zkbridge --network localnet",
    "deploy:testnet": "jeju deploy zkbridge --network testnet",
    "deploy:mainnet": "jeju deploy zkbridge --network mainnet --dry-run",
    "deploy:mainnet:force": "jeju deploy zkbridge --network mainnet",
    "setup:sp1": "jeju deploy zkbridge-setup --sp1",
    "setup:phala": "jeju deploy zkbridge-setup --phala",
    "build:sp1": "cd circuits/token-transfer && ~/.sp1/bin/cargo-prove prove build && cd ../solana-consensus && ~/.sp1/bin/cargo-prove prove build",
    "demo": "bun run scripts/demo-bridge.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ tests/ scripts/",
    "check": "biome check --write src/ tests/ scripts/",
    "clean": "rm -rf dist",
    "audit": "bun pm audit",
    "preflight": "bun run typecheck && bun run lint && bun run audit && bun run test:unit",
    "preflight:prod": "NODE_ENV=production bun run preflight"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.30.1",
    "@noble/curves": "2.0.1",
    "@noble/hashes": "1.7.1",
    "@solana/spl-token": "0.4.13",
    "@solana/web3.js": "1.98.4",
    "commander": "12.1.0",
    "hono": "4.11.1",
    "viem": "2.43.2",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
