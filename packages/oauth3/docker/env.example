# OAuth3 Deployment Configuration
# ================================
# Copy this file to .env and fill in your values
#
# Required for production:
# - At least one OAuth provider configured
# - TEE_MODE set to 'dstack' or 'phala'
# - Proper RPC and storage endpoints
#
# For local development, defaults work out of the box

# ===========================================
# Network Configuration
# ===========================================
# Chain IDs:
#   localnet: 420691 (local anvil)
#   testnet:  420690 (Jeju Testnet)
#   mainnet:  420692 (Jeju Mainnet)
CHAIN_ID=420690

# RPC URLs
# Leave empty to use defaults based on CHAIN_ID
JEJU_RPC_URL=
JEJU_TESTNET_RPC_URL=https://testnet.jejunetwork.org
JEJU_MAINNET_RPC_URL=https://mainnet.jejunetwork.org

# ===========================================
# TEE Configuration
# ===========================================
# TEE providers:
#   simulated - Development mode (no real TEE)
#   dstack    - Intel TDX via dstack CVM
#   phala     - Phala Network CVM
#   auto      - Auto-detect available TEE
TEE_MODE=simulated

# dstack Configuration (for TEE_MODE=dstack)
# Get these from dstack dashboard
DSTACK_API_KEY=
DSTACK_CLUSTER_ID=

# Phala Configuration (for TEE_MODE=phala)
# Get these from Phala developer console
PHALA_CLUSTER_ID=
PHALA_WORKER_PUBKEY_1=
PHALA_WORKER_PUBKEY_2=
PHALA_WORKER_PUBKEY_3=

# Mainnet Phala (separate cluster)
PHALA_MAINNET_CLUSTER_ID=
PHALA_MAINNET_WORKER_PUBKEY_1=
PHALA_MAINNET_WORKER_PUBKEY_2=
PHALA_MAINNET_WORKER_PUBKEY_3=

# ===========================================
# MPC Configuration
# ===========================================
# Enable FROST threshold MPC signing
MPC_ENABLED=false

# Threshold: minimum signers required (e.g., 2-of-3)
MPC_THRESHOLD=2

# Total number of MPC nodes in cluster
MPC_TOTAL_PARTIES=3

# ===========================================
# Storage Configuration (DWS/IPFS)
# ===========================================
# DWS provides IPFS-compatible API
# Localnet: http://localhost:4030
# Testnet:  https://dws.testnet.jejunetwork.org
# Mainnet:  https://dws.jejunetwork.org
DWS_URL=http://localhost:4030

# IPFS-compatible endpoints (derived from DWS_URL if not set)
IPFS_API_ENDPOINT=
IPFS_GATEWAY_ENDPOINT=

# ===========================================
# JNS Configuration
# ===========================================
# JNS is used for app/identity resolution
JNS_GATEWAY=https://jns.testnet.jejunetwork.org
JNS_MAINNET_GATEWAY=https://jns.jejunetwork.org

# ===========================================
# OAuth Provider Credentials
# ===========================================
# Register your app at each provider's developer portal
# Set the callback URL to: https://your-domain.com/auth/callback

# Google OAuth 2.0
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Twitter/X OAuth 2.0
# https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Discord OAuth
# https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Apple Sign In
# https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ===========================================
# Farcaster Configuration
# ===========================================
# Neynar API for Farcaster data
# https://neynar.com
NEYNAR_API_KEY=

# Farcaster Hub for direct protocol access
FARCASTER_HUB_URL=https://hub.pinata.cloud

# Your app's Farcaster identity (optional)
# Used for issuing credentials as your app
FARCASTER_FID=
FARCASTER_SIGNER_KEY=

# ===========================================
# Server Configuration
# ===========================================
# OAuth3 agent HTTP port
OAUTH3_PORT=4200

# Node identifier (unique per node in MPC cluster)
OAUTH3_NODE_ID=oauth3-node-1

# Cluster identifier (same for all nodes in cluster)
OAUTH3_CLUSTER_ID=oauth3-cluster

# Private key for signing (TEE will generate if not set)
# WARNING: In production, this should be managed by TEE
TEE_PRIVATE_KEY=

# ===========================================
# Logging & Debugging
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable verbose logging for development
DEBUG=false
